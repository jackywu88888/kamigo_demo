[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
   "type": "flex",
   "altText": "活動查詢",
   "contents": {
    "type": "carousel",
    "contents": [
      <% @signs3.each do|sign| %>  
      {
        "type": "bubble",
        "size": "micro",
        "hero": {
          "type": "image",
          "size": "full",
          "aspectRatio": "40:30",
          "aspectMode": "fit",
          "url": "<%= sign[:圖片] %>"
        },
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "【<%= sign[:名稱] %>】",
              "weight": "bold",
              "size": "sm",
              "wrap": true,
              "color": "#EA0000",
              "align": "center"
            },
            {
              "type": "box",
              "layout": "vertical",
              "contents": [
                {
                  "type": "text",
                  "text": "<%= sign[:活動] %>",
                  "size": "xs",
                  "color": "#0000C6",
                  "margin": "none",
                  "flex": 1,
                  "wrap": true
                }
              ],
              "height": "150px"
            },
            {
              "type": "box",
              "layout": "vertical",
              "contents": [
                {
                  "type": "text",
                  "text": "時間",
                  "size": "xxs",
                  "color": "#EA0000",
                  "weight": "bold"
                },
                {
                  "type": "text",
                  "text": "<%= sign[:時間] %>",
                  "color": "#0000E3"
                }
              ],
              "height": "50px"
            },
            {
              "type": "button",
              "action": {
                "type": "uri",
                "label": "<%= sign[:名稱] %>",
                "uri": "<%= sign[:連結] %>"
              },
              "style": "primary",
              "height": "sm"
            }
          ],
          "paddingAll": "13px",
          "borderWidth": "none"
        }
      }<%= "," if sign != @signs3.last %>
      <% end %>
    ]
   }
  }
]