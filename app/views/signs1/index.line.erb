[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
    "type": "flex",
    "altText": "簽到查詢",
    "contents": {
    "type": "carousel",
    "contents": [
      <% @signs1.each do|sign| %>
      {
        "type": "bubble",
        "size": "micro",
        "hero": {
          "type": "image",
          "size": "full",
          "aspectRatio": "40:30",
          "aspectMode": "cover",
          "url": "<%= sign[:圖片] %>"
        },
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "【<%= sign[:名稱] %>】",
              "weight": "bold",
              "size": "sm",
              "wrap": true,
              "color": "#EA0000",
              "align": "center"
            },
            {
              "type": "box",
              "layout": "baseline",
              "contents": [
                {
                  "type": "text",
                  "text": "<%= sign[:活動] %>",
                  "size": "xs",
                  "color": "#0000C6",
                  "margin": "none",
                  "flex": 1,
                  "wrap": true
                }
              ]
            },
            {
              "type": "box",
              "layout": "vertical",
              "contents": [
                {
                  "type": "button",
                  "action": {
                    "type": "uri",
                    "label": "<%= sign[:名稱] %>",
                    "uri": "<%= sign[:連結] %>"
                  },
                  "style": "primary"
                }
              ],
              "margin": "10px"
            }
          ],
          "spacing": "sm",
          "paddingAll": "13px"
        }
      }<%= "," if sign != @signs1.last %>
      <% end %>
    ]
  }
},
  {
			"type": "flex",
      "altText": "簽到查詢",
      "contents": {
        "type": "carousel",
        "contents": [
          <% @signs1.each do|sign| %>
          {
            "type": "bubble",
            "hero": {
              "type": "image",
              "size": "full",
              "aspectRatio": "680:480",
              "aspectMode": "cover",
              "url": "<%= sign[:圖片] %>"
            },
            "body": {
              "type": "box",
              "layout": "vertical",
              "spacing": "sm",
              "contents": [
                {
                  "type": "text",
                  "text": "【簽到系列】",
                  "wrap": true,
                  "weight": "bold",
                  "size": "xxl",
                  "color": "#F00078",
                  "align": "center"
                },
                {
                  "type": "box",
                  "layout": "vertical",
                  "contents": [
                    {
                      "type": "text",
                      "text": "活動",
                      "wrap": true,
                      "weight": "bold",
                      "size": "xl",
                      "flex": 0,
                      "color": "#0000C6"
                    },
                    {
                      "type": "text",
                      "text": "<%= sign[:活動] %>",
                      "wrap": true,
                      "weight": "bold",
                      "size": "lg",
                      "flex": 1,
                      "color": "#000000",
                      "margin": "none"
                    }
                  ]
                },
                {
                  "type": "box",
                  "layout": "vertical",
                  "contents": [
                    {
                      "type": "text",
                      "text": "時間",
                      "flex": 0,
                      "size": "xl",
                      "color": "#0000C6",
                      "weight": "bold"
                    },
                    {
                      "type": "text",
                      "text": "<%= sign[:時間] %>",
                      "color": "#EA0000",
                      "weight": "bold",
                      "size": "lg",
                      "margin": "none"
                    }
                  ],
                  "margin": "10px"
                }
              ]
            },
            "footer": {
              "type": "box",
              "layout": "vertical",
              "spacing": "sm",
              "contents": [
                {
                  "type": "button",
                  "style": "primary",
                  "action": {
                    "type": "uri",
                    "label": "<%= sign[:名稱] %>",
                    "uri": "<%= sign[:連結] %>"
                  },
                  "margin": "50px"
                }
              ]
            }
          }<%= "," if sign != @signs1.last %>
          <% end %>
        ]
      }
    }
]