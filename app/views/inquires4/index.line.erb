[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
			"type": "flex",
      "altText": "This is a Flex Message",
      "contents": {  
					"type": "carousel",
					"contents": [
						<% @inquires4.each do|inquire| %>
						{
							"type": "bubble",
							"size": "micro",
							"hero": {
								"type": "image",
								"url": "<%= inquire[:圖片] %>",
								"size": "full",
								"aspectMode": "cover",
								"aspectRatio": "320:213"
							},
							"body": {
								"type": "box",
								"layout": "vertical",
								"contents": [
									{
										"type": "box",
										"layout": "vertical",
										"contents": [
											{
												"type": "text",
												"text": "<%= inquire[:活動] %>",
												"wrap": true,
												"color": "#0000E3"
											}
										],
										"height": "260px"
									},
									{
										"type": "button",
										"action": {
											"type": "uri",
											"label": "連結影片",
											"uri": "<%= inquire[:影片] %>"
										},
										"style": "primary"
									}
								],
								"spacing": "sm",
								"paddingAll": "13px"
							}
						}<%= "," if inquire != @inquires4.last %>
            <% end %>
					]
				}
				}
]