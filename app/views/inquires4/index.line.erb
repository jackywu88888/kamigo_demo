[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
    "type": "text",
    "text": "<%= @inquires4.map do|inquire|
      "#{inquire[:活動]}\\n\\n#{inquire[:影片]}"
        end.join("\\n\\n") %>"
  },
      {
        "type": "flex",
        "altText": "This is a Flex Message",
        "contents": {  
            "type": "carousel",
            "contents": [
              <% @inquires4.each do|inquire| %>
              {
                "type": "bubble",
                "hero": {
                  "type": "image",
                  "size": "full",
                  "aspectRatio": "20:13",
                  "aspectMode": "cover",
                  "url": "<%= inquire[:圖片] %>"
                },
                "body": {
                  "type": "box",
                  "layout": "vertical",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "<%= inquire[:活動] %>",
                      "wrap": true,
                      "weight": "bold",
                      "size": "xl",
                      "color": "#0000C6"
                    }
                  ]
                },
                "footer": {
                  "type": "box",
                  "layout": "vertical",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "button",
                      "style": "primary",
                      "action": {
                        "type": "uri",
                        "label": "Add to Cart",
                        "uri": "<%= inquire[:影片] %>"
                      }
                    }
                  ]
                }
              }<%= "," if inquire != @inquires4.last %>
              <% end %>
            ]
          }
]