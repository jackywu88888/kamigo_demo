[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
     "type": "flex",
      "altText": "雲端發票載具",
      "contents": { 
      "type": "carousel",
      "contents": [
         <% @invoices1.each do|invoice| %>
          {
            "type": "bubble",
            "header": {
              "type": "box",
              "layout": "vertical",
              "contents": [
                {
                  "type": "text",
                  "text": "<%= invoice [:發票商家] %>",
                  "align": "center"
                },
                {
                  "type": "text",
                  "text": "<%= invoice [:步驟教學] %>",
                  "wrap": true
                }
              ],
              "height": "150px",
              "position": "relative"
            },
            "hero": {
              "type": "image",
              "url": "<%= invoice [:圖片顯示] %>",
              "size": "full",
              "aspectRatio": "388:500",
              "aspectMode": "cover"
            },
            "footer": {
              "type": "box",
              "layout": "vertical",
              "spacing": "sm",
              "contents": [
                {
                  "type": "button",
                  "style": "primary",
                  "height": "sm",
                  "action": {
                    "type": "uri",
                    "label": "查看圖片",
                    "uri": "<%= invoice [:圖片顯示] %>"
                  }
                },
                {
                  "type": "spacer"
                }
              ],
              "flex": 0
            }
          }<%= "," if invoice != @invoices1.last %>
  <% end %>
]  
}
},
<%=raw(Kamiflex.json(self) do
  alt_text "發票載具設定"

  carousel do
    bubbles @invoices1 do |invoice|
      hero invoice [:圖片顯示], size: :full, aspectRatio: "388:500", aspectMode: :cover
      body spacing: :sm do
        text product [:發票商家], wrap: true, weight: :bold, size: :xl, align: center, color: "#F00078"
        vertical_box height:"150px" do
        text invoice [:步驟教學], wrap: true, weight: :bold, size: :xl, wrap: true, color: "#000dff"
        end
        end
      footer do
        url_button "查看圖片", invoice [:圖片顯示] , style: :primary
      end
    end
  end
end)%>
]