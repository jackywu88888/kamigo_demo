[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
			"type": "flex",
      "altText": "簽到查詢",
      "contents": {
        "type": "carousel",
        "contents": [
          <% @signins1.each do|signin| %>
          {
            "type": "bubble",
            "hero": {
              "type": "image",
              "size": "full",
              "aspectRatio": "680:480",
              "aspectMode": "cover",
              "url": "<%= signin[:圖片] %>"
            },
            "body": {
              "type": "box",
              "layout": "vertical",
              "spacing": "sm",
              "contents": [
                {
                  "type": "text",
                  "text": "【簽到系列】",
                  "wrap": true,
                  "weight": "bold",
                  "size": "xxl",
                  "color": "#F00078",
                  "align": "center"
                },
                {
                  "type": "box",
                  "layout": "vertical",
                  "contents": [
                    {
                      "type": "text",
                      "text": "活動",
                      "wrap": true,
                      "weight": "bold",
                      "size": "xl",
                      "flex": 0,
                      "color": "#0000C6"
                    },
                    {
                      "type": "text",
                      "text": "<%= signin[:活動] %>",
                      "wrap": true,
                      "weight": "bold",
                      "size": "lg",
                      "flex": 1,
                      "color": "#000000",
                      "margin": "none"
                    }
                  ]
                },
                {
                  "type": "box",
                  "layout": "vertical",
                  "contents": [
                    {
                      "type": "text",
                      "text": "時間",
                      "flex": 0,
                      "size": "xl",
                      "color": "#0000C6",
                      "weight": "bold"
                    },
                    {
                      "type": "text",
                      "text": "<%= signin[:時間] %>",
                      "color": "#EA0000",
                      "weight": "bold",
                      "size": "lg",
                      "margin": "none"
                    }
                  ],
                  "margin": "10px"
                }
              ]
            },
            "footer": {
              "type": "box",
              "layout": "vertical",
              "spacing": "sm",
              "contents": [
                {
                  "type": "button",
                  "style": "primary",
                  "action": {
                    "type": "uri",
                    "label": "<%= signin[:名稱] %>",
                    "uri": "<%= signin[:連結] %>"
                  },
                  "margin": "50px"
                }
              ]
            }
          }<%= "," if signin != @signins1.last %>
          <% end %>
        ]
      }
    }
]