[
  <% if @keyword.present? %>
  {
    "type": "text",
    "text": "您要查詢(<%= @keyword %>)的關鍵字題目如下。"
  },
  <% end %>
  {
  "type": "flex",
  "altText": "禮物投票",
  "contents":{
    "type": "carousel",
    "contents": [
      <% @votes.each do|vote| %>
      {
      "type": "bubble",
      "hero": {
        "type": "image",
        "size": "full",
        "aspectRatio": "1932:2576",
        "aspectMode": "cover",
        "url": "<%= vote[:圖片] %>"
      },
      "body": {
        "type": "box",
        "layout": "vertical",
        "spacing": "sm",
        "contents": [
          {
            "type": "text",
            "text": "<%= vote[:活動] %>",
            "wrap": true,
            "weight": "bold",
            "size": "md",
            "color": "#F00078",
            "align": "center"
          },
          {
            "type": "text",
            "text": "投票時間02/10~02/25",
            "wrap": true,
            "weight": "bold",
            "size": "md",
            "color": "#F00078",
            "align": "center"
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "作品名稱/作品描述",
                "wrap": true,
                "weight": "bold",
                "size": "lg",
                "flex": 0,
                "color": "#0000C6"
              },
              {
                "type": "text",
                "text": "<%= vote[:名稱] %>",
                "wrap": true,
                "weight": "bold",
                "flex": 0,
                "color": "#000000",
                "size": "sm"
              }
            ],
            "height": "125px",
            "spacing": "xs"
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "button",
                "action": {
                  "type": "uri",
                  "label": "<%= vote[:連結名稱] %>",
                  "uri": "<%= vote[:連結] %>"
                },
                "style": "primary",
                "color": "#FF0000",
                "height": "sm"
              }
            ],
            "height": "60px"
          }
        ]
      }
    }<%= "," if vote != @votes.last %>
    <% end %>
  ]
}
}
]